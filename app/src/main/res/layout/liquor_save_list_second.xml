<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:theme="@style/Theme.RecyclerView_SaveAdapter"
    android:layout_marginTop="5dp">

<!-- 술의 종류 들어가는 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/adapter_save_liquor_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="소주"
            android:textSize="20dp"/>
    </LinearLayout>


<!--    병 수가 들어가는 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


            <TextView
                android:id="@+id/adapter_save_liquor_bottle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_weight="1"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="병"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textAlignment="textStart"/>


    </LinearLayout>

<!--    잔 수가 들어가는 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/adapter_save_liquor_cup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="잔"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textAlignment="textStart"/>




    </LinearLayout>

<!--    한계치가 들어가는 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="최대주량"
                android:textColor="@color/red"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/adapter_save_liquor_max"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="15dp"
                android:textColor="@color/red"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>